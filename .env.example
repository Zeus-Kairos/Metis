LLM_PROVIDER=ollama
LLM_API_KEY=your-ollama-api-key
LLM_MODEL=qwen3:8b # gpt-oss:20b-cloud
LLM_BASE_URL=http://localhost:11434
EMBED_PROVIDER=ollama
EMBED_API_KEY=your-ollama-api-key
EMBED_MODEL=nomic-embed-text:latest
# Logging Level
LOG_LEVEL=INFO

# RAG Configuration
RAG_TYPE=agentic # simple, query_refined, fusion
RAG_K=10 # Number of documents to retrieve

# LangSmith Configuration for tracing
LANGSMITH_TRACING=true
LANGSMITH_API_KEY=your-langsmith-api-key
LANGSMITH_ENDPOINT=https://api.smith.langchain.com
LANGSMITH_PROJECT=Metis

# File Upload Configuration
# Base directory for file uploads
BASE_UPLOAD_DIR=uploads

# Supported file formats (comma-separated)
SUPPORTED_FORMATS=.txt,.pdf,.md,.docx,.pptx,.xlsx,.html,.htm,.csv

# Maximum file size in bytes (default: 100MB)
MAX_FILE_SIZE=104857600

# Maximum number of files per upload
MAX_FILES_PER_UPLOAD=20

# Postgres Database Connection String
DB_URI=postgresql://postgres:postgres@localhost:5432/metis_db

# Secret key for JWT authentication
SECRET_KEY=your-secret-key
